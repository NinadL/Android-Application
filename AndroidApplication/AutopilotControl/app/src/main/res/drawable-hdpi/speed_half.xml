<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@+id/progress">
        <rotate
            android:fromDegrees="140"
            android:toDegrees="140"
            >
            <shape
                android:innerRadiusRatio="2.8"
                android:shape="ring"
                android:thicknessRatio="7"
                >
                <solid android:color="#5000ddff" />
                <stroke android:width="1dp" android:color="@android:color/holo_red_dark"/>
                <gradient
                    android:centerColor="@android:color/holo_blue_light"
                    android:endColor="@android:color/holo_blue_light"
                    android:startColor="@android:color/holo_blue_light"
                    android:type="linear"
                    />
            </shape>
        </rotate>
    </item>
</layer-list>
