<?xml version="1.0" encoding="utf-8"?>

<!-- version -->
<Version value="2.0" />

<!-- spec -->
<AudioSpec value="ARP" />

<!-- whether Prompts (Wolverine) or TTS string (Logan)
     Prompts or TTS -->
<GuidanceType value="TTS" />

<!-- Whether name uses phoneme or orthography -->
<AddressNameType value="Orthography" />

<!-- It is an estimated value for single prompt unit (like [102956]) lasting time (Millisecond), default value is 0 -->
<EstimatedSinglePromptUnitTime value="1000" />

<!-- It is an Silent Prompt Unit added in the front of the guidance prompt. Candidate "pause50","pause100","pause150","pause200" -->
<SilentPrompt value="pause150" />
<!-- Delay Distance to calculate side guidancee. Consider the guidance start. Unit: Metric -->
<DelayDistance value="10" />

<Phoneme>
    <EscapePrefix prefix="\x1b\\lang=%s\\" />
    <EscapeSuffix suffix="\x1b\\toi=orth\\" />

    <!-- phoneme tag format, '[LNG=NT-%s]' or '[LNG=%s]' or empty -->
    <PhonemeTagFormat format="\x1b\\toi=nts\\" />

    <!-- slot prefix and postfix for wolverine, can be <TTS<slot>> or <TTS<slot2>>, '2' is the index of tts slot -->
    <SlotGeneralFormat format="<TTS<slot%d>>" />
    <SlotStreetFormat format="<STREETTTS<slot%d>>" />
    <SlotCityFormat format="<CITYTTS<slot%d>>" />
	
    <PhonemeTagMapping>
        <ENU dataTag="ENG" />
        <MNC dataTag="CMN" />
    </PhonemeTagMapping>

    <LanguagePriority>
        <ENG priority="ENU" />
        <CHI priority="MNC" />
    </LanguagePriority>
</Phoneme>

<RulePath>
    <default                path="en_CN" />
    <CHINESE                path="zh_CN" />
    <NORTH_AMERICAN         path="en_CN" />
</RulePath>

<Switches>
    <RepeatWithTone value="false" />
    <Repeat3rdGuidance value="false" />
    <PlayObeyLawGuidance value="false" />
    <DistinguishRoundaboutType value="true" />
    <AlwaysParseNumber value="true" />
    <EnableExitName value="true" />
</Switches>

<ThirdGuidanceBehaviour>
    <!-- In Wolverine Project, 3rd guidance only have 2 behaviours, "Tone" or "Voice", NEVER both,
         If user chooses "tone + voice", for the below turn types, 3rd guidance should only play "voice", 
         for else, only "double tone" needed -->
    
    <!-- TurnTypeOnlyVoice value = "EFERRY_ENTER(32);EDESTINATION_LEFT(36);EDESTINATION_AHEAD(37);
                                    EDESTINATION_RIGHT(38);EWAYPOINT_LEFT(33);EWAYPOINT_AHEAD(34);EWAYPOINT_RIGHT(35)" -->
    <TurnTypeOnlyVoice value = "32;36;37;38;33;34;35" />
</ThirdGuidanceBehaviour>
<GuidanceFilter>
  <!-- Support "INFO","FIRST","SECOND","THIRD"-->
  <Default Switch="INFO;FIRST;SECOND;THIRD" />
  <LargeRoundaboutEnter Switch="INFO;FIRST;SECOND" />
  <LargeRoundaboutExit Switch="THIRD" />
  <SmallRoundaboutEnter Switch="INFO;FIRST;SECOND;THIRD" />
  <SmallRoundaboutExit Switch="NONE" />
  <Waypoint Switch="INFO;FIRST;THIRD" />
  <Destination Switch="INFO;FIRST;THIRD" />
</GuidanceFilter>

<Constraints>
    <Constraint value="[distance]" />
    <Constraint value="[street_name]" />
    <Constraint value="[city_name]" />
    <Constraint value="[current_street_name]" />
    <Constraint value="[ordinal_number]" />
    <Constraint value="[exit_number]" />
    <Constraint value="[ParentPOI_name]" />
    <Constraint value="[relative_location]" />
    <Constraint value="[landmark]" />    
    <Constraint value="[name_changes]" />
    <Constraint value="[ordinal_raw]" />
    <Constraint value="[ParentPOI]" />
    <Constraint value="[pedestrianonly]" />
    <Constraint value="[POI_name]" />
    <Constraint value="[restrictedaccess]" />
</Constraints>

